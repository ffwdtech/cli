{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "preserveConstEnums": true,
    "lib": [
      "es6",
      "dom"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}